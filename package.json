{
	"name": "mr-pitchs-payload-playground",
	"version": "1.0.0",
	"description": "Palyground to build boilerplate for Payload CMS and next.js app",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_OPTIONS=--no-deprecation next build",
		"dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack",
		"devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack",
		"dev:seed": "PAYLOAD_CONFIG_PATH=src/payload/payload.config.ts PAYLOAD_DROP_DATABASE=true PAYLOAD_SEED=true pnpm dev",
		"generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation IGNORE_LOCAL_FONT=true payload generate:importmap",
		"generate:types": "cross-env NODE_OPTIONS=--no-deprecation IGNORE_LOCAL_FONT=true payload generate:types",
		"lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
		"check-types": "tsc --noEmit",
		"payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
		"start": "cross-env NODE_OPTIONS=--no-deprecation next start",
		"start:postgres": "docker compose -f docker-compose.yml --env-file .env up -d",
		"stop:postgres": "docker compose -f docker-compose.yml --env-file .env down",
		"stop:postgres:cleanup": "docker compose -f docker-compose.yml --env-file .env down --volumes",
		"analyze": "cross-env ANALYZE=true NODE_OPTIONS=--no-deprecation next build",
		"nuke": "rm -r node_modules; rm -r pnpm-lock.yaml; rm -rf .next"
	},
	"dependencies": {
		"@hookform/resolvers": "^4.1.2",
		"@next/bundle-analyzer": "^15",
		"@payloadcms/db-postgres": "^3.55.0",
		"@payloadcms/email-resend": "^3.55.0",
		"@payloadcms/live-preview-react": "^3.55.0",
		"@payloadcms/next": "^3.55.0",
		"@payloadcms/payload-cloud": "^3.55.0",
		"@payloadcms/plugin-seo": "^3.55.0",
		"@payloadcms/richtext-lexical": "^3.55.0",
		"@payloadcms/storage-s3": "^3.55.0",
		"@payloadcms/translations": "^3.55.0",
		"@payloadcms/ui": "^3.55.0",
		"@radix-ui/react-accordion": "^1.2.2",
		"@radix-ui/react-aspect-ratio": "^1.1.2",
		"@radix-ui/react-avatar": "^1.1.2",
		"@radix-ui/react-checkbox": "^1.1.3",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.5",
		"@radix-ui/react-label": "^2.1.1",
		"@radix-ui/react-navigation-menu": "^1.2.4",
		"@radix-ui/react-popover": "^1.1.5",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-select": "^2.1.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.2",
		"@radix-ui/react-toggle": "^1.1.1",
		"@radix-ui/react-toggle-group": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@react-email/components": "^0.0.34",
		"@react-email/preview": "0.0.12",
		"@react-email/render": "1.1.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.0.4",
		"cross-env": "^7.0.3",
		"embla-carousel-react": "^8.5.2",
		"graphql": "^16.8.1",
		"lucide-react": "^0.511.0",
		"next": "^15",
		"next-intl": "^3.26.3",
		"next-themes": "^0.4.6",
		"payload": "^3.55.0",
		"react": "19",
		"react-dom": "19",
		"react-hook-form": "^7.54.2",
		"resend": "^4.1.2",
		"sharp": "0.34.3",
		"sonner": "^1.7.4",
		"tailwind-merge": "^3.3.0",
		"tw-animate-css": "^1.3.0",
		"vaul": "^1.1.2",
		"zod": "^3.24.1",
		"zod-form-data": "^2.0.5",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9.19.0",
		"eslint-config-next": "^15",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6",
		"prism-react-renderer": "^2.4.1",
		"tailwindcss": "^4",
		"typescript": "^5"
	},
	"engines": {
		"node": "^20 || >= ^22"
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"esbuild",
			"sharp"
		]
	}
}

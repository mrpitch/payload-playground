{
	"compilerOptions": {
		"target": "esnext",
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@/app/*": ["./src/app/(app)/*"],
			"@/components/*": ["src/components/*"],
			"@/lib/*": ["src/lib/*"],
			"@/img/*": ["public/img/*"],
			"@/payload/*": ["src/payload/*"],
			"@payload-config": ["src/payload/payload.config.ts"],
			"@payload-types": ["src/payload/payload-types.ts"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/components/ui/logo1tsx"
	],
	"exclude": ["node_modules"]
}
